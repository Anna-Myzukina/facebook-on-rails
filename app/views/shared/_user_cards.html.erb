<div class="col-md-7">
  <% unless title.blank? %>
    <h2><%= title %></h2>
  <% end %>
  <ul class="user-cards">
    <% @users.each do |user| %>
      <li class="user-card">
        <div class="friend-btn-container">
          <%= friendship_action_links(user) %>
        </div>
        <div class="user-card-avatar">
          <%= avatar_link user, :post_thumb %>
        </div>
        <span class="user-card-name"><strong><%= link_to user.full_name, user %></strong><br />
        <%= "@#{user.username}" %></span>
      </li>
    <% end %>
  </ul>
  <%= will_paginate @users %>
</div>
    