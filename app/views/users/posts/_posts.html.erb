<div class="col-md-7 posts-container">
  <ul class="posts">
    <li class="post">
      <%= form_for [@user, Post.new], class: "form-group" do |f| %>
        <div class="form-group">
          <% placeholder = current_user == @user ? "What's on your mind, #{@user.first_name}?" : "Write something to #{@user.first_name}." %>

          <%= f.text_area :body, class: ["form-control", "post-text-area"], placeholder: placeholder %>
        </div>
        <div class="text-right">
          <%= f.submit "Post", class: "btn btn-primary" %>
        </div>
      <% end %>
    </li>
    
    <% @user.posts.each do |post| %>
      <li class="post" id=<%= "post_#{post.id}" %>>
        <div class="post-avatar"><img src="http://via.placeholder.com/50x50"></div>
        <span class="post-user-link"><strong><%= link_to post.poster.full_name, post.poster %></strong> <%= "@#{post.poster.username}" %></span>
        <span class="time"><%= time_ago_in_words(post.created_at) %></span>
        <span class="dropdown post-actions">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <span class="glyphicon glyphicon-option-horizontal"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit", edit_post_path(post) %></li>
            <li><%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" } %></li>
          </ul>
        </span>
        <span class="post-content">
          <%= simple_format(post.body) %>
          <div class="post-interactions">
            <%= post_toggleable_like_button(post) if user_signed_in? %>
            <small class="post-likes-count"><%= likes_count post %></small>
          </div>
        </span>
        
        <%= render "users/comments/comments", post: post %>
        
      </li>
    <% end %>
  </ul>
</div>