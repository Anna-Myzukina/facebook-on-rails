<% content_for :title, "Avatar - #{@user.full_name}" %>
<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= @user.full_name %></h1>
    <%= link_to "Change avatar", avatar_path if current_user == @user %>
    <div class="main-avatar-container"> 
      <%= avatar_link @user, :full, @user.avatar_url %>
    </div>
    <br />
    <%= link_to "Back to #{@user.full_name}'s page", @user %>
  </div>
</div>