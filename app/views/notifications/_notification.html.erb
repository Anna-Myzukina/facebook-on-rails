<li class="notification <%= "notification_#{notification.id}" %>" >
  <span class="comment-avatar"><%= avatar_link notification.actor, :comment_thumb %></span>
  <span style="float: right;">
  	<%= link_to icon("fas", "times"), notification, class: "delete-notification", method: :delete, remote: true %>
  </span>
  <%= link_to render("notifications/#{notification.action}",
                     notification: notification),
              notification,
              class: "description" %> 
</li>